---
import BaseLayout from './BaseLayout.astro';
const { frontmatter } = Astro.props;
---
<BaseLayout pageTitle={frontmatter.title}>
    <div class="title">
        <h1>{frontmatter.title}</h1>
    </div>
    <div class="time">
        <p class="date">{frontmatter.date.toString().slice(0,10)}</p>
    </div>
    <p class="description"><em>{frontmatter.description}</em></p>
    <article>
        <slot />
    </article>
</BaseLayout>
<style>
    .title{
        text-align: center;
    }
    .time{
        text-align: center;
    }
    .date{
        font-size: 0.8em;
        color: #666;
    }
    .description{
        text-align: center;
    }
    article :global(img) {
    max-width: 80%;
    height: auto;
    display: block;
    margin: 0 auto;
    }
</style>