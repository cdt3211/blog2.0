---
import BaseLayout from '../layouts/BaseLayout.astro';
const allPosts = await Astro.glob('../pages/posts/*.md');
const pageTitle = "Posts";

---

<BaseLayout pageTitle={pageTitle}>
	<h2>{pageTitle}</h2>
	<ul>
		{allPosts.sort((a, b) => new Date(b.frontmatter.date).getTime() - new Date(a.frontmatter.date).getTime()).map((post) => <li><a href={post.url}>{post.frontmatter.title}</a></li>)}
	</ul>
</BaseLayout>
<style>
	ul {
		list-style-type:disc;
		/* padding: 0; */
	}
	li {
		margin-bottom: 1rem;
	}
	a {
		text-decoration: none;
		color: #000000;
	}
	a:hover {
		text-decoration: underline;
	}
</style>